#!/usr/bin/perl -w

# for comparing my repository with checked out bits

use strict;
use File::Find;
use Getopt::Long;

my $cvsroot = $ARGV[0] || "$ENV{HOME}/.CVSROOT";
my @dirs = ();
find(\&wanted, $cvsroot);

foreach my $dir (sort @dirs) {
  print "$dir\n";
}
  
sub wanted {
  return unless -d;
  my $path = $File::Find::name;
  $path =~ s!^\Q$cvsroot\E/?!!;
  return if $path =~ /Attic$/;

  $path =~ s!^((X|mutt)_)?rcs/?!!;

  return unless $path;
  push @dirs, $path;
}
